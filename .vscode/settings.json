{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true,
        "source.removeUnused": true
    },
    "editor.formatOnSave": true,
    "eslint.validate": [
        "javascript",
        "typescript"
    ],
    "eslint.run": "onSave",
    "eslint.alwaysShowStatus": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
}
